<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/background">


<RelativeLayout
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/layout"
    android:background="@drawable/background">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Makanan Pokok"
        android:id="@+id/textView"
     />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/textView"
        android:id="@+id/makanan_pokok"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Lauk"
        android:id="@+id/textView2"
        android:layout_below="@+id/makanan_pokok"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/textView2"
        android:id="@+id/lauk"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Buah"
        android:id="@+id/textView3"
        android:layout_below="@+id/lauk"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/textView3"
        android:id="@+id/buah"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sayur"
        android:id="@+id/textView4"
        android:layout_below="@+id/buah"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/textView4"
        android:id="@+id/sayur"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Susu"
        android:id="@+id/textView5"
        android:layout_below="@+id/sayur"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/textView5"
        android:id="@+id/susu"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/next"
        android:src="@drawable/next"
        android:layout_below="@+id/susu"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancel"
        android:src="@drawable/cancel2"
        android:layout_alignTop="@+id/next"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submit"
        android:layout_below="@+id/next"
        android:layout_centerHorizontal="true"
        android:src="@drawable/submit" />
</RelativeLayout>
</ScrollView>